<launch>
	<node name="stage_sim" pkg="stage_ros" type="stageros" args="$(find read_sensor_data)/world/simple.world" output="screen"/>
  
	<node name="read_sync" pkg="read_sensor_data" type="readOdomScan" output="screen">
		<remap from="/robot0/goal" to="/goal"/>
        <remap from="/pose" to="/robot_0/base_pose_ground_truth"/>
		<remap from="/scan" to="/robot_0/base_scan"/>
		<remap from="/cmd_vel" to="/robot_0/cmd_vel"/>
	</node>

    <node name="read_sync" pkg="read_sensor_data" type="readOdomScan" output="screen">
        <remap from="/robot1/goal" to="/goal"/>
		<remap from="/pose" to="/robot_1/base_pose_ground_truth"/>
		<remap from="/scan" to="/robot_1/base_scan"/>
		<remap from="/cmd_vel" to="/robot_1/cmd_vel"/>
	</node>

	
</launch>